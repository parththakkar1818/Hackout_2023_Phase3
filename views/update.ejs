<!DOCTYPE html>
<html>
<head>
    <title>Img Form</title>
    <!-- <link rel="stylesheet" href="../static/home.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
    <style>
      
    </style>
  
</head>
<body class="bg-gray-100">
    <div class="w-full max-w-3xl mx-auto mt-8 bg-white p-8 rounded shadow">
        <form method="post"  action="<%= selectedEvent._id %>" enctype="multipart/form-data">
            <div class="grid grid-cols-2 gap-6">
                <div>
                    <label for="myTitle" class="block text-gray-700 font-semibold">Title</label>
                    <input value="<%= selectedEvent.title %>" name="myTitle" type="text" placeholder="Enter title" class="w-full mt-2 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
                    
                <br>
                <br>
                <p class="block text-gray-700 font-semibold">Click if you want to uplaod new Image-</p>
                <input type="checkbox" class="toggle-input">
                <input type="file" name="myImage" id="uploader" accept="image/*" style="display: none;" class="image-input">

                    <label for="myDesc" class="block mt-4 text-gray-700 font-semibold">Description</label>
                    <textarea name="myDescupdate" id="desc" cols="30" rows="5" placeholder="Enter description" class="w-full mt-2 px-3 py-2 border rounded focus:outline-none focus:border-blue-500"><%= selectedEvent.description %></textarea>
                    
                    <label for="myRules" class="block mt-4 text-gray-700 font-semibold">Rules</label>
                    <textarea name="myRules" cols="30" rows="5" placeholder="Enter rules" class="w-full mt-2 px-3 py-2 border rounded focus:outline-none focus:border-blue-500"><%= selectedEvent.rules %></textarea>


                </div>
                <div>
                    <label for="myDate" class="block mt-4 text-gray-700 font-semibold">Date</label>
                    <input value="<%= selectedEvent.date.toISOString().substr(0, 10) %>" type="date" name="myDate" class="w-full mt-2 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
                    
                    <label for="myTime" class="block mt-4 text-gray-700 font-semibold">Time</label>
                    <input value="<%= selectedEvent.time %>" type="time" name="myTime" class="w-full mt-2 px-3 py-2 border rounded focus:outline-none focus:border-blue-500">
                    <button type="submit" class="mt-8 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Submit
                    </button>

                </div>
            </div>
        </form>
    </div>

      <script>
      const toggleInput = document.querySelector('.toggle-input');
      const imageInput = document.querySelector('.image-input');
    
      toggleInput.addEventListener('change', () => {
        if (toggleInput.checked) {
          imageInput.style.display = 'block';
        } else {
          imageInput.style.display = 'none';
        }
      });
    </script>
    
</body>
</html>
